{% extends 'base.html.twig' %}

{% block title %}Ona.ve{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app_home_index') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_link_tags('app_home_index') }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row pb-5">
            <div class="col-lg-6" style="padding-top: 10ex;">
                <h1 style="font-weight: 600; font-size: 400%">Poišči<br> strokovnjakinjo</h1>
                <br>
                <h3 class="fst-italic mt-5">Tekst, ki opisuje storitev oz. spletno mesto</h3>

                <div class="input-group widebar input-group-lg pt-5">
                    <input type="text" style="border-radius: 0;height: 10ex" class="form-control"
                           placeholder="Išči po ključnih besedah" aria-label="search">
                    <div class="input-group-append">
                        <button class="btn btn-primary btn-lg" style="border-radius: 0; height: 10ex; width: 10ex;"
                                type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>


            </div>
            <div class="col-lg-6 text-center">
                <img style="padding-top: 5ex; height: 75vh; " alt="img"
                     src="{{ asset('images/strokovnjakinja.jpg') }}">
            </div>
        </div>

        <div class="row mt-5">
            <div id="o-projektu" class="col-lg-12">
                <h1>O projektu </h1>
                <div class="line1"></div>
                <div class="line2"></div>
            </div>

            <div class="col-lg-12  mt-5">
                <h3>
                    PROJEKTI
                </h3>
            </div>
            <div class="col-lg-8 mt-3">
